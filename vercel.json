{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "src": "/(.*\\.(js|css|woff2|woff|ttf|ico|png|jpg|jpeg|gif|svg|webp))",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "src": "/index.html",
      "headers": { "Cache-Control": "no-cache, no-store, must-revalidate" },
      "continue": true
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": { "Cache-Control": "no-cache, no-store, must-revalidate" }
    }
  ]
}
